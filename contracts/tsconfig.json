{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "declaration": true,
    "rootDir": ".",
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./build",
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules/*"],
}
