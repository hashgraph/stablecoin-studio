{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "declaration": true,
        "rootDir": ".",
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./build",
        "strictPropertyInitialization": false,
        "resolveJsonModule": true
    },
    "exclude": ["build/**/*", "node_modules"]
}
